<div class="tips-form-container">
    <a href="/tips/dashboard">Voltar</a>
    <h1>Editando Tip</h1>
    <form action="tips/edit" method="POST">
    <input type="hidden" name="id" value="{{tips.id}}">
    <span class="label">{{this.title}}</span>
        <div class="form-control">
            <label for="title">Título</label>
            <input type="text" name="title" placeholder="Título da dica">

            <label for="tec"></label>
            <input type="text" name="tec" placeholder="Tecnologia">

            <label for="content"></label>
            <input type="text" name="content" placeholder="Digite sua dica" value="{{tips.title}}">
        </div>
        <input type="submit" value="Editar Tip">
    </form>
</div>                                                                                                                  